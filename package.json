{
  "name": "project-manager-next",
  "displayName": "Project Manager Next",
  "description": "Easily manage multiple projects and branches",
  "version": "1.0.0",
  "publisher": "Dolov",
  "engines": {
    "vscode": "^1.79.1"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "view/title": [
        {
          "command": "project-manager.searchCurrent",
          "when": "view == recently",
          "group": "navigation@1"
        },
        {
          "command": "project-manager.searchFavorite",
          "when": "view == favorite",
          "group": "navigation@1"
        },
        {
          "command": "project-manager.refreshCurrent",
          "when": "view == recently",
          "group": "navigation@2"
        },
        {
          "command": "project-manager.refreshFavorite",
          "when": "view == favorite",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "project-manager.copy",
          "when": "view == recently || view == favorite",
          "group": "inline@1"
        },
        {
          "command": "project-manager.rename",
          "when": "view == favorite",
          "group": "inline@1"
        },
        {
          "command": "project-manager.favorite",
          "when": "viewItem == favorite",
          "group": "inline@2"
        },
        {
          "command": "project-manager.favorited",
          "when": "viewItem == favorited",
          "group": "inline@2"
        },
        {
          "command": "project-manager.openInNew",
          "when": "view == recently || view == favorite",
          "group": "inline@3"
        }
      ]
    },
    "keybindings": [
      {
        "command": "project-manager.search",
        "key": "ctrl+r",
        "mac": "ctrl+r"
      }
    ],
    "commands": [
      {
        "command": "project-manager.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "project-manager.openInNew",
        "title": "在新窗口中打开",
        "icon": "images/open-new.svg"
      },
      {
        "command": "project-manager.rename",
        "title": "重命名",
        "icon": "images/rename.svg"
      },
      {
        "command": "project-manager.copy",
        "title": "复制",
        "icon": "images/copy.svg"
      },
      {
        "command": "project-manager.favorite",
        "title": "收藏",
        "icon": "images/favorite.svg"
      },
      {
        "command": "project-manager.favorited",
        "title": "取消收藏",
        "icon": "images/favorited.svg"
      },
      {
        "command": "project-manager.refreshCurrent",
        "title": "刷新",
        "icon": "images/refresh.svg"
      },
      {
        "command": "project-manager.refreshFavorite",
        "title": "刷新",
        "icon": "images/refresh.svg"
      },
      {
        "command": "project-manager.searchCurrent",
        "title": "搜索",
        "icon": "images/search.svg"
      },
      {
        "command": "project-manager.searchFavorite",
        "title": "搜索",
        "icon": "images/search.svg"
      },
      {
        "command": "project-manager.search",
        "title": "搜索"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "projectManager",
          "title": "项目管理器",
          "icon": "images/project.svg"
        }
      ]
    },
    "views": {
      "projectManager": [
        {
          "id": "favorite",
          "name": ""
        },
        {
          "id": "recently",
          "name": ""
        }
      ]
    }
  },
  "repository": "https://github.com/Dolov/vscode-project-manager",
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.198",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "1.79.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
